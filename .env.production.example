# Production Environment Configuration
# Онлайн школа навчання - Production Environment Variables
# Copy this file to .env.production and fill in the values

# ===========================================
# GENERAL SETTINGS
# ===========================================
NODE_ENV=production
DOMAIN=yourdomain.com
ADMIN_EMAIL=admin@yourdomain.com

# ===========================================
# DATABASE CONFIGURATION
# ===========================================
DB_HOST=postgres
DB_PORT=5432
DB_NAME=learning_school
DB_USER=postgres
DB_PASSWORD=your_secure_database_password_here
DB_POOL_MIN=5
DB_POOL_MAX=20

# ===========================================
# REDIS CONFIGURATION
# ===========================================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# JWT AUTHENTICATION
# ===========================================
JWT_SECRET=your_very_long_and_secure_jwt_secret_key_here_minimum_32_characters
JWT_EXPIRES_IN=7d
REFRESH_TOKEN_EXPIRES_IN=30d

# ===========================================
# PAYMENT GATEWAYS
# ===========================================
# Stripe
STRIPE_SECRET_KEY=sk_live_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# LiqPay
LIQPAY_PUBLIC_KEY=your_liqpay_public_key
LIQPAY_PRIVATE_KEY=your_liqpay_private_key

# ===========================================
# CORS & SECURITY
# ===========================================
CORS_ORIGIN=https://yourdomain.com
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# ===========================================
# LOGGING
# ===========================================
LOG_LEVEL=info

# ===========================================
# MONITORING
# ===========================================
GRAFANA_USER=admin
GRAFANA_PASSWORD=your_secure_grafana_password
GRAFANA_ROOT_URL=https://yourdomain.com/grafana

# ===========================================
# FRONTEND
# ===========================================
REACT_APP_API_URL=https://yourdomain.com/api
REACT_APP_NODE_ENV=production
REACT_APP_STRIPE_PUBLISHABLE_KEY=pk_live_your_stripe_publishable_key

# ===========================================
# NOTIFICATIONS (Optional)
# ===========================================
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/your/webhook/url
ALERT_EMAIL=alerts@yourdomain.com

# ===========================================
# SMTP (Optional - for email notifications)
# ===========================================
SMTP_HOST=smtp.yourdomain.com
SMTP_PORT=587
SMTP_USER=noreply@yourdomain.com
SMTP_PASSWORD=your_smtp_password
SMTP_FROM=noreply@yourdomain.com

# ===========================================
# CDN (Optional)
# ===========================================
CDN_URL=https://cdn.yourdomain.com
CDN_ENABLED=false

# ===========================================
# BACKUP
# ===========================================
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
